@model ColoArk.ViewModels.EnterGiveawayViewModel
@using static ColoArk.Models.Mailbox;
@using static ColoArk.Models.GiveawayDrop;

@{
    ViewData["Title"] = "Enter";
}

<div class="col-md-5 pull-right"></div>
<div class="col-md-5 pull-left"></div>
<div class="col-md-2">
    <h2>Enter Giveaway</h2>
    <form asp-action="Enter">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<GiveawayDrop.DropType>()"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-success" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



